# internal_secrets.yaml
# Internal credentials for Stagebox system operations.
# This file should NOT be synced to field devices.
#
# Location: /home/coredev/stagebox/data/internal_secrets.yaml
#

nas_backup:
  host: "YOUR-NAS"          # NAS IP address or hostname
  share: "YOUR SMB SHARE NAME"           # SMB share name
  username: "YOUR USERNMAE"           # SMB username
  password: "YOUR PASSWORD"          # SMB password

